<% if flash[:destroy] %>
	<div class="destroy">
		<span class="success"><%= flash[:destroy] %></span>
	</div>
<% end %>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", book_path(book) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", destroy_books_path(book), method: :delete, "data-confirm" =>"Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h4>New Book</h4>
<% if flash[:blank] %>
	<div class="blank-error">
		<div class="error-title">
			<span class="error-title-p">
			error
			</span>
		</div>
		<div class="error-content">
			<span class="error-content-p">
				Both Title and Body can't be blank.
			</span>
		</div>
	</div>
<% end %>
<%= form_for(@book, url: '/books') do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>
<h5>Body</h5>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
